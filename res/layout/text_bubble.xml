<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/bubbleDialog">
    
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Choose your bubble: "/>
    
    <HorizontalScrollView 
        android:layout_width="fill_parent" 
        android:layout_height="110dp"
        android:layout_gravity="center">
		
	 	<LinearLayout
	 	    android:orientation="horizontal"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content" >
        	
	 	    <ImageView
	            android:id="@+id/img0"    
	        	android:layout_width="wrap_content"   
	        	android:layout_height="100dp" 
	        	android:adjustViewBounds="true"    
	      		android:scaleType="centerInside"
	      		android:src="@drawable/stop" /> 
        	
	 	    <ImageView
	            android:id="@+id/img1"    
	        	android:layout_width="wrap_content"   
	        	android:layout_height="100dp" 
	        	android:adjustViewBounds="true"    
	      		android:scaleType="centerInside"
	      		android:src="@drawable/bub1" /> 
	      		
	      	<ImageView
	            android:id="@+id/img2"    
	        	android:layout_width="wrap_content"   
	        	android:layout_height="100dp" 
	        	android:adjustViewBounds="true"    
	      		android:scaleType="centerInside"
	      		android:src="@drawable/bub2" /> 
	      		
	      	<ImageView
	            android:id="@+id/img3"    
	        	android:layout_width="wrap_content"   
	        	android:layout_height="100dp" 
	        	android:adjustViewBounds="true"    
	      		android:scaleType="centerInside"
	      		android:src="@drawable/bub3" /> 
	      		
	      	<ImageView
	            android:id="@+id/img4"    
	        	android:layout_width="wrap_content"   
	        	android:layout_height="100dp" 
	        	android:adjustViewBounds="true"    
	      		android:scaleType="centerInside"
	      		android:src="@drawable/bub4" /> 
	      		
	      	<ImageView
	            android:id="@+id/img5"    
	        	android:layout_width="wrap_content"   
	        	android:layout_height="100dp" 
	        	android:adjustViewBounds="true"    
	      		android:scaleType="centerInside"
	      		android:src="@drawable/bub5" />
	      	<ImageView
	            android:id="@+id/img6"    
	            android:visibility="gone"
	        	android:layout_width="wrap_content"   
	        	android:layout_height="100dp" 
	        	android:adjustViewBounds="true"    
	      		android:scaleType="centerInside"
	      		android:src="@drawable/bub6" /> 
	      	<ImageView
	            android:id="@+id/img7"    
	            android:visibility="gone"
	        	android:layout_width="wrap_content"   
	        	android:layout_height="100dp" 
	        	android:adjustViewBounds="true"    
	      		android:scaleType="centerInside"
	      		android:src="@drawable/bub7" /> 
	      	<ImageView
	            android:id="@+id/img8"    
	            android:visibility="gone"
	        	android:layout_width="wrap_content"   
	        	android:layout_height="100dp" 
	        	android:adjustViewBounds="true"    
	      		android:scaleType="centerInside"
	      		android:src="@drawable/bub8" /> 
	      	<ImageView
	            android:id="@+id/img9"    
	            android:visibility="gone"
	        	android:layout_width="wrap_content"   
	        	android:layout_height="100dp" 
	        	android:adjustViewBounds="true"    
	      		android:scaleType="centerInside"
	      		android:src="@drawable/bub9" /> 
	      	
	      	<ImageView
	            android:id="@+id/img10"    
	            android:visibility="gone"
	        	android:layout_width="wrap_content"   
	        	android:layout_height="100dp" 
	        	android:adjustViewBounds="true"    
	      		android:scaleType="centerInside"
	      		android:src="@drawable/bub10" /> 
		</LinearLayout>
    </HorizontalScrollView>
    
</LinearLayout>