<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	
      <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:layout_gravity="top"
        android:orientation="horizontal" >   <!--totally, height 480dip, width 320dip, but it seems not -->
		   
		    <ImageView android:id="@+id/text_error"  
		            android:layout_width="wrap_content"  
		            android:layout_height="wrap_content"
		            android:background="@+drawable/error" />    <!-- this is the return button -->
		            
		    <TextView
		        	android:layout_width="230dp"
		        	android:text="Text"
		        	android:gravity="center_horizontal"
		        	android:layout_height="wrap_content"/>
		       		
		    <ImageView android:id="@+id/text_check"  
		            android:layout_width="wrap_content"  
		            android:layout_height="wrap_content" 
		            android:background="@+drawable/check"/>
    </LinearLayout>
	
    <FrameLayout 
        android:layout_width="fill_parent"
		android:layout_height="435dip">
		
        <RelativeLayout 
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
		
        <ImageView
            android:id="@+id/img"    
        	android:layout_width="fill_parent"   
        	android:layout_height="fill_parent" 
        	android:adjustViewBounds="true"    
      		android:scaleType="centerInside"
      		android:layout_centerInParent="true" /> 
		
		</RelativeLayout>

	</FrameLayout>
	
    <Button 
	    android:id="@+id/btn_edit_text" 
	    android:layout_width="fill_parent"
	    android:layout_gravity="bottom"
	    android:gravity="center"
		android:layout_height="35dp" 
		android:text="Edit text"
		android:textColor="#FFFFFFFF"
		android:background="#00000000"
		android:textSize="15dip" />
    
</LinearLayout>

